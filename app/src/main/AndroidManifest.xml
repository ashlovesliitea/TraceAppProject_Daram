        android:supportsRtl="true"
        android:theme="@style/Theme.TraceAppProject_Daram">
        <activity android:name=".AnalyzeActivity"></activity>
        <activity android:name=".WalkingActivity" />
        <activity android:name=".TestActivity" />
        <activity android:name=".x_1Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".reprot_page.MovingFeetHeatmapActivity" />
