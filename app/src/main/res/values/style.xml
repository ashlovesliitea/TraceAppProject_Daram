    <item name="android:textSize">
        64sp
    </item>

    <item name="android:textColor">
        #6A6B8C
    </item>
    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
