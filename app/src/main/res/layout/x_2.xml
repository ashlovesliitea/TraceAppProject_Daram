<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/x_1"
    tools:context ="com.example.traceappproject_daram.ui.SubActivity"
    android:orientation="vertical"
    android:gravity="center"
    >


    <EditText
        android:id="@+id/login_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="20dp"
        android:hint="이메일"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:baselineAligned="false"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"/>



    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#6A6B8C"
        android:text="로그인"
        android:textColor="#F9F9F9"
        android:textSize="18sp"
        app:backgroundTint="#6A6B8C" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14px"
        android:gravity="center"
        android:text="비밀번호를 잊으셨나요?"
        android:textstyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_round_sign_up"
        android:backgroundTint="#6A6B8C"
        android:text="구글 계정으로 로그인"
        android:textColor="#6A6B8C"
        android:textSize="18sp"
        app:backgroundTint="#F9F9F9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="아이디 찾기 | 비밀번호 찾기 | 회원가입"
        android:textStyle="bold" />

</LinearLayout>
