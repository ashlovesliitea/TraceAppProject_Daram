<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/x_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context="com.example.traceappproject_daram.x_1Activity"
    android:orientation="vertical"
    android:weightSum="1"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/x_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
    <!--상단가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        app:layout_constraintGuide_percent="0.70"
        android:id="@+id/guidelinetop"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.constraintlayout.widget.Guideline>
    <!--하단가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        app:layout_constraintGuide_percent="0.95"
        android:id="@+id/guidelinebottom"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.constraintlayout.widget.Guideline>
    <!--왼쪽가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        app:layout_constraintGuide_percent="0.2"
        android:id="@+id/guidelineleft"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.constraintlayout.widget.Guideline>
    <!--오른쪽가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        app:layout_constraintGuide_percent="0.8"
        android:id="@+id/guidelineright"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.constraintlayout.widget.Guideline>

    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_round"
        android:backgroundTint="#6A6B8C"
        android:text="로그인"
        android:textColor="#F9F9F9"
        android:textSize="18sp"
        app:backgroundTint="#6A6B8C"
        app:layout_constraintLeft_toLeftOf="@id/guidelineleft"
        app:layout_constraintRight_toRightOf="@id/guidelineright"
        app:layout_constraintBottom_toTopOf="@id/button_sign"
        app:layout_constraintTop_toTopOf="@id/guidelinetop"
        />

    <Button
        android:id="@+id/button_sign"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_round_sign_up"
        android:backgroundTint="#F9F9F9"
        android:text="회원가입"
        android:textColor="#6A6B8C"
        android:textSize="18dp"
        app:backgroundTint="#F9F9F9"
        app:layout_constraintLeft_toLeftOf="@id/guidelineleft"
        app:layout_constraintRight_toRightOf="@id/guidelineright"
        app:layout_constraintTop_toBottomOf="@+id/button_login"
        app:layout_constraintBottom_toTopOf="@id/guidelinebottom"
        app:layout_constraintVertical_bias="0.5"
         />


</androidx.constraintlayout.widget.ConstraintLayout>